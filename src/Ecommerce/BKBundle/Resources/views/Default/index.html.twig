{% extends 'BKBundle::layout.html.twig' %}

{% block sidebar %}{% endblock%}

{% block banner %}
    {% include 'BKBundle:Banner:index.html.twig' %}
{% endblock%}

{% block content %}
<div class="homepage">
    <div class="row-fluid">
        <div class="span8" id="homepage-banner">
            <h1>Luxe kaasplateau</h1>
            <p>Totaal +/-1000 gram kaas voldoende voor 8 personen. </p>
            
            <div class="price-box">
                van &euro; 19,95
                <strong>Voor &euro; 12,95</strong>
            </div>
            
        </div>
        <div class="span4">    
            
            <h3>Populaire pagina's:</h3>
            
            <ul class="unstyled populair-links">
                <li>Biologische brie</li>
                <li>Boerenkaas</li>
                <li>Noord-Hollandse kaas</li>
                <li>Kruidenkaas</li>
                <li>Minder vette kaas</li>
                <li>Goudse kaas</li>
                <li>Geitenkaas - Schapenkaas</li>
                <li>Komijne kaas</li>
                <li>Overige kaassoorten.</li>
            </ul>
            
        </div>
    </div>
    
    <hr />
        
    <div class="row-fluid">
        
        <div class="span4">
            <a class="homepage-shortcut shortcut-tassen" href="{{ path('_section', { 'section' : 'tassen'}) }}">
                <strong>Tassen</strong> <i class="icon-chevron-right"></i>
                <small>o.a.: Schoudertassen, <br />Koffers & Handtassen</small>
            </a>
                
        </div>
        <div class="span4">
            
            <a class="homepage-shortcut shortcut-sieraden" href="{{ path('_category', { 'section' : 'accessoires', 'category' : 'sieraden'}) }}">
                <strong>Sieraden</strong> <i class="icon-chevron-right"></i>
                <small>o.a.: Armbanden, <br />Broches & Oorbellen</small>
            </a>
            
        </div>        
        <div class="span4">
            
            <a class="homepage-shortcut shortcut-woonaccessoires" href="{{ path('_section', { 'section' : 'woonaccessoires'}) }}">
                <strong>Woonaccessoires</strong> <i class="icon-chevron-right"></i>
                <small>o.a.: Schalen, <br />Bekers & Blikken</small>
            </a>
        </div>
    </div>
    
    <hr />
    
    <div class="row-fluid">
        <div class="span8">
            
        </div>
            
        <div class="span4">
        </div>
    </div>
    
    <h4>Nieuwste producten</h4>
    
    <div class="row-fluid">
        <div class="span12">
            
            {% set x = 0 %}
                {% for product in latest_products %}
                    <div class="span3">
                        <div class="category_product">

                            <div class="category_product_image">
                               
                                {% set image = product.firstImage %}
                                
                                {% if image == null %}
                                
                                {% else %}

                                    <a href="{{ path('_product_shortcut', { 'product' : product.permalink} ) }}" title="{{ product.name }}">
                                        <img class="first_product_image" alt="{{ product.name }}" title="{{ product.name }}" src="{{ image.thumbpath }}" />
                                    </a>
                                
                                {% endif %}
                            </div>

                            <div class="category_product_bottom">

                                <span class="category_product_title">
                                    <a href="{{ path('_product_shortcut', { 'product' : product.permalink} ) }}" title="{{ product.name }}">
                                        {{ product.name }}
                                    </a>
                                </span>
                                
                            </div>

                            <span class="category_product_price">&euro; {{ product.price|number_format(2, ',', '.') }}</span>
                            <p class="category_product_stock">Nog {{ product.stock }} op voorraad</p>

                        </div>
                    </div>
            
                    {% set x = (x + 1) %}
            
                    {% if x == 4 %}
            
                        {% set x = 0 %}
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span12">
                        
            
                    {% endif %}
            
                {% endfor %}
        </div>
    </div>
</div>

{% endblock %}