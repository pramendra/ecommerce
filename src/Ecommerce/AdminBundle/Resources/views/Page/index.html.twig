{% extends 'AdminBundle00::layout.html.twig' %}

{% block content %}

<div class="row-fluid">

    <div class="span12">

        <a href="{{ path('admin_page', { 'id' : '0' }) }}" class="btn-large btn btn-primary pull-right">Pagina toevoegen</a>
        
        <h1>Pagina's</h1>
        <hr />

        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="orders">
            <thead>
                <tr>
                    <th width="20%">Id</th>
                    <th width="25%">Titel</th>
                    <th width="15%">Permalink</th>
                    <th width="15%">Gemaakt op</th>
                    <th width="15%">Aangepast op</th>
                </tr>
            </thead>
            <tbody>

                
                {% for page in pages %}
                
                <tr>
                    <td>{{ page.id }} </td>
                    <td><a href="{{ path('admin_page', { 'id' : page.id }) }}">{{ page.title }}</a></td>
                    <td>{{ page.permalink }}</td>
                    <td>{{ page.createdAt|date('d-m-Y H:i') }}</td>
                    <td>{{ page.createdAt|date('d-m-Y H:i') }}</td>
                </tr>
                
                {% endfor %}
                
                
            </tbody>
        </table>

    </div>

</div>

{% endblock %}


{% block javascripts %}
{{ parent() }}
{% endblock %}