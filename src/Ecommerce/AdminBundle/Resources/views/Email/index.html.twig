{% extends 'AdminBundle::layout.html.twig' %}

{% block content %}

<div class="row-fluid">

    <div class="span12">
        
        <h1>Verstuurde e-mails</h1>
        
        <hr />


        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="orders">
            <thead>
                <tr>
                    <th width="5%">id</th>
                    <th width="25%">Onderwerp</th>
                    <th width="25%">Verzonden aan</th>
                    <th width="15%">Datum</th>
                </tr>
            </thead>
            <tbody>

                
                {% for email in emails %}
                
                <tr>
                    <td>{{ email.id}}</td>
                    <td><a href="{{ path('admin_email_view', { id : email.id}) }}">{{ email.subject }}</a></td>
                    <td>{{ email.client.name }}</td>
                    <td>{{ email.createdAt|date('d-m-Y H:i') }}</td>
                </tr>
                
                {% endfor %}
                
                
            </tbody>
        </table>

    </div>

</div>

{% endblock %}