{% extends 'AdminBundle::layout.html.twig' %}

{% block content %}

{{ form_errors(newsletter_form) }}

<div class="row-fluid">

    <div class="span12">
        
        <a class="btn btn-primary btn-large pull-right" href="javascript:void(0)" onclick="document.pageform.submit()"><i class="icon-white icon-ok"></i> Opslaan</a>
        
        <h1>{{ newsletter.title }}</h1>
        
        <hr />
    </div>

</div>

<div class="row-fluid">
    
    <div class="span12">

        <form action="" class="form-horizontal client-form" name="pageform" method="post" {{ form_enctype(newsletter_form) }}>
            {{ form_row(newsletter_form.title) }}
            {{ form_row(newsletter_form.campainName) }}
            {{ form_label(newsletter_form.content, 'Inhoud') }}    
            {{ form_widget(newsletter_form.content, { 'attr': {'class': 'ckeditor'} }) }}    

            {{ form_rest(newsletter_form) }}
        </form>   
        
    </div>
</div>

{% endblock %}


{% block javascripts %}

{{ parent() }}

<script src="/ckeditor/ckeditor.js"></script>

{% endblock %}
