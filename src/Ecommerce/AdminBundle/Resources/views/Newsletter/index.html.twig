{% extends 'AdminBundle::layout.html.twig' %}

{% block content %}

<div class="row-fluid">

    <div class="span12">
        
        <h1>Nieuwsbrieven</h1>
        
        <hr />


        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="orders">
            <thead>
                <tr>
                    <th width="5%">Id</th>
                    <th width="65%">Titel</th>
                    <th width="15%">Aantal mensen</th>
                    <th width="15%">Gemaakt op</th>
                </tr>
            </thead>
            <tbody>

                
                {% for newsletter in newsletters %}
                
                <tr>
                    <td>{{ newsletter.id }}</td>
                    <td><a href="{{ path('admin_newsletter', { 'id' : newsletter.id }) }}">{{ newsletter.title }}</a></td>
                    <td>{{ newsletter.clients|length }}</td>
                    <td>{{ newsletter.createdAt|date('d-m-Y H:i') }}</td>
                </tr>
                
                {% endfor %}
                
                
            </tbody>
        </table>

    </div>

</div>

{% endblock %}


{% block javascripts %}
{{ parent() }}
{% endblock %}