{% extends 'AdminBundle00::layout.html.twig' %}

{% block content %}

{{ form_errors(coupons_form) }}

<div class="row-fluid">

    <div class="span12">
        
        <a class="btn btn-success pull-right" href="javascript:void(0)" onclick="document.couponform.submit()"><i class="icon-white icon-ok"></i> Opslaan</a>
        
        <h1>Kortingscode {{ coupon.code }}</h1>
        
        <hr />
    </div>

</div>

<div class="row-fluid">
    
    <div class="span12">
    
        <div class="well">
            <form action="" class="form-horizontal client-form" name="couponform" method="post" {{ form_enctype(coupons_form) }}>
                {{ form_row(coupons_form.code) }}
                {{ form_row(coupons_form.discount) }}
                {{ form_row(coupons_form.discountType) }}
                {{ form_rest(coupons_form) }}
            </form>   
        </div>
        
    </div>
</div>

<div class="row-fluid">
    <div class="span12">
         <table cellpadding="2" cellspacing="1" class="table table-striped" width="100%">
            <thead>
                <tr>
                    <th>Ordernummer</th>
                    <th>Totaalbedrag</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                <tr>
                    <td><a href="{{ path('admin_order', {'id' : order.id }) }}">{{ order.ordernr }}</a></td>
                    <td>&euro; {{ order.total|number_format(2) }}</td>
                    <td>{{ order.status }}</td>
                </tr>
                {% endfor %}
            </thead>
        </table>
    </div>
</div>

{% endblock %}