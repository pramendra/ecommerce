{% extends 'AdminBundle00::layout.html.twig' %}

{% block content %}

<div class="row-fluid">

    <div class="span12">
        
        <h1>Kortingcodes</h1>
        
        <hr />


        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="orders">
            <thead>
                <tr>
                    <th width="20%">Code</th>
                    <th width="25%">Type</th>
                    <th width="15%">Korting</th>
                    <th width="15%">Gemaakt op</th>
                </tr>
            </thead>
            <tbody>

                
                {% for coupon in coupons %}
                
                <tr>
                    <td><a href="{{ path('admin_coupon', { 'id' : coupon.id }) }}">{{ coupon.code }}</a></td>
                    
                    {% if coupon.discountType == 1 %}
                    <td>Percentage</td>
                    <td>{{ coupon.discount }}%</td>
                    {% endif %}
                            
                    {% if coupon.discountType == 2 %}
                    <td>Bedrag</td>
                    <td>&euro; {{ coupon.discount }}</td>
                    {% endif %}
                    <td>{{ coupon.createdAt|date('d-m-Y H:i') }}</td>
                </tr>
                
                {% endfor %}
                
                
            </tbody>
        </table>

    </div>

</div>

{% endblock %}


{% block javascripts %}
{{ parent() }}
{% endblock %}