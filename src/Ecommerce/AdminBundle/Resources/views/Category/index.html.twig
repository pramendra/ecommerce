{% extends 'AdminBundle00::layout.html.twig' %}

{% block content %}
<div class="row-fluid">

    <div class="span12">
        
        <a href="{{ path('admin_category_edit' , { 'id' : 0 } ) }}" class="btn btn-small"><i class="icon-plus"></i> Nieuwe categorie toevoegen</a>
        <a href="{{ path('admin_subcategory_edit' , { 'id' : 0 } ) }}" class="btn btn-small"><i class="icon-plus"></i> Nieuwe subcategorie toevoegen</a>

        {% for section in sections %}
        
        <h3>{{ section.name }}</h3>
        
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th width="45%">Naam</th>
                    <th width="25%">Link</th>
                    <th width="22%"></th>
                </tr>
            </thead>
            <tbody>

                    {% for category in section.categories %}
                
                        <tr class="category">
                            <td><a href="{{ path('admin_category_edit' , { 'id' : category.id } ) }}"><strong>{{ category.name }}</strong></a></td>
                            <td>/{{ section.permalink }}/{{ category.permalink }}</td>
                            <td><a class="btn btn-small" href="{{ path('admin_category_edit' , { 'id' : category.id } ) }}"><i class="icon-pencil"></i> Wijzigen</a> <a class="btn btn-small btn-danger" href="{{ path('admin_category_delete' , { 'id' : category.id } ) }}"><i class="icon-trash icon-white"></i> Verwijderen</a></td>
                        </tr>
                        
                        {% for subcategory in category.subcategories %}

                            <tr>
                                <td><a href="{{ path('admin_subcategory_edit' , { 'id' : subcategory.id } ) }}">{{ subcategory.name }}</a> <br /> {{ subcategory.description }} </td>
                                <td><a href="{{ path('_subcategory', { 'section' : section.permalink, 'category' : category.permalink, 'subcategory' : subcategory.permalink }) }}">/{{ section.permalink }}/{{ category.permalink }}/{{ subcategory.permalink }}</a></td>
                                <td><a class="btn btn-small" href="{{ path('admin_subcategory_edit' , { 'id' : subcategory.id } ) }}"><i class="icon-pencil"></i> Wijzigen</a> <a class="btn btn-small btn-danger" href="{{ path('admin_subcategory_delete' , { 'id' : subcategory.id } ) }}"><i class="icon-trash icon-white"></i> Verwijderen</a></td>
                            </tr>

                        {% endfor %}
                
                    {% endfor %}
            </tbody>
        </table>

        {% endfor%}
        
    </div>

</div>


{% endblock %}    